<h2>Inicia sesión</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="container" style="max-width: 40%">
	  <div class="field">
	    <%= f.email_field :email, autofocus: true, label:"Correo"%>
	  </div>
	
	  <div class="field">
	    <%= f.password_field :password, autocomplete: "off", label:"Contraseña" %>
	  </div>
	
	  <% if devise_mapping.rememberable? -%>
	    <div class="field">
	      <%= f.check_box :remember_me, label:"Recuerdame" %>
	    </div>
	  <% end -%>
	
	  <div class="actions text-center">
	    <%= f.submit "Inicia sesión", class:"btn btn-primary" %>
	  </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
