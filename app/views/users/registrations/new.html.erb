<h2>Regístrate</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
	<div class="container" style="max-width: 40%">
	  <div class="field">
	    <%= f.text_field :nombre, autofocus: true, label:"Nombre" %>
	  </div>
	  
	  <div class="field">
	    <%= f.text_field :direccion, autofocus: true, label:"Direccion" %>
	  </div>
	  
	  <div class="field">
	    <%= f.text_field :codigo_postal, autofocus: true, label:"Codigo postal" %>
	  </div>
		
	  <div class="field">
	    <%= f.email_field :email, autofocus: true, lanel:"Correo" %>
	  </div>
	
	  <div class="field">
	    
	    <% if @minimum_password_length %>
	    <em>(<%= @minimum_password_length %> characters minimum)</em>
	    <% end %><br />
	    <%= f.password_field :password, autocomplete: "off", label:"Contraseña" %>
	  </div>
	
	  <div class="field">
	    <%= f.password_field :password_confirmation, autocomplete: "off", label:"Confirma tu contraseña" %>
	  </div>
	
	  <div class="actions text-center">
	    <%= f.submit "Regístrate", class:"btn btn-primary" %>
	  </div>
 	</div>
<% end %>

<%= render "users/shared/links" %>
