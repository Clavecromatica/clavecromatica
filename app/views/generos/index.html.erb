<h1>Lista de generos</h1>

<table class='table table-hover table-striped'>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @generos.each do |genero| %>
      <tr>
        <td><%= genero.nombre %></td>
        <td><%= genero.descripcion %></td>
        <td><%= link_to 'Ver', genero %></td>
        <td><%= link_to 'Editar', edit_genero_path(genero) %></td>
        <td><%= link_to 'Borrar', genero, method: :delete, data: { confirm: 'EstÃ¡ usted seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Nuevo Genero', new_genero_path, class: 'btn btn-primary center-block', method: :get  %>
