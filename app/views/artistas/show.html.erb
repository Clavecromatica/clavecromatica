<div class="text-center">
	<%= image_tag @artista.imagen, class: 'portada' %>
	<h1><%= @artista.nombre %>
		<br /><small><%= @artista.fecha_origen.strftime("Origen: %d/%m/%Y")%></small>
	</h1>
</div>
<div class="page-header">
	<h2>Discos</h2>
</div>
<%  @discos.in_groups_of(4, false) do |dg| %>
	<div class="row" style="height: 200px">

		<% dg.each do |d|%>
		<div class="col-sm-3">

			<h4 class="text-center"><%= d.nombre  %></h4>
			<div class="flip-container">
				<%= link_to d do %>
					<div class="flipper">
						<div class=" text-center front">
							<%= image_tag d.portada_delantera, class: 'img-responsive img-catalogo' %>
						</div>
						<div class="text-center back">
							<%= image_tag d.portada_trasera, class: 'img-responsive img-catalogo' %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
		<% end %>

	</div>
<% end %>
