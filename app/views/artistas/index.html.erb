<h1>Lista de artistas</h1>

<table class='table table-hover table-striped'>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Fecha origen</th>
      <th>Web</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artistas.each do |artista| %>
      <tr>
        <td><%= artista.nombre %></td>
        <td><%= artista.descripcion %></td>
        <td><%= artista.fecha_origen %></td>
        <td><%= artista.web %></td>
        <td><%= link_to 'Ver', artista %></td>
        <td><%= link_to 'Editar', edit_artista_path(artista) %></td>
        <td><%= link_to 'Borrar', artista, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Agregar Artista', new_artista_path, class: 'btn btn-primary center-block', method: :get %>
