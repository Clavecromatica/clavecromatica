<h1>Listing artistas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Fecha origen</th>
      <th>Web</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artistas.each do |artista| %>
      <tr>
        <td><%= artista.nombre %></td>
        <td><%= artista.descripcion %></td>
        <td><%= artista.fecha_origen %></td>
        <td><%= artista.web %></td>
        <td><%= link_to 'Show', artista %></td>
        <td><%= link_to 'Edit', edit_artista_path(artista) %></td>
        <td><%= link_to 'Destroy', artista, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artista', new_artista_path %>
