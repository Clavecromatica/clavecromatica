<h1>Listing discos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Publicacion</th>
      <th>Precio</th>
      <th>Artista</th>
      <th>Discografica</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discos.each do |disco| %>
      <tr>
        <td><%= disco.nombre %></td>
        <td><%= disco.publicacion %></td>
        <td><%= disco.precio %></td>
        <td><%= disco.artista %></td>
        <td><%= disco.discografica %></td>
        <td><%= link_to 'Show', disco %></td>
        <td><%= link_to 'Edit', edit_disco_path(disco) %></td>
        <td><%= link_to 'Destroy', disco, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Disco', new_disco_path %>
