<% @generos.each do |g| %>
	<div class="page-header">
		<h2 class="text-primary"><%= g.nombre %></h2>
		<p class="lead"><%= g.descripcion %></p>
	</div>
	<% g.discos.in_groups(3, false) do |dg| %>
		<div class="row">
			<% dg.each do |d| %>
				<div class="col-sm-4 text-center">
					<h3 class="text-success">
						<%= d.nombre %>
						<br /><small><%= link_to d.artista.nombre, d.artista%></small>
					</h3>
					<%= image_tag d.portada_delantera, class: 'img-responsive thumbnail center-block' %>
					<%= button_to "Ver disco", d, class: 'btn btn-primary', method: :get %>
				</div>
			<% end %>
			<hr />
		</div>
	<% end %>
<% end %>

<%= button_to 'Agregar disco', new_disco_path, class: 'btn btn-primary center-block', method: :get %>
